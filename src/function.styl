@import 'config'

/**
 * pixel to rem
 */
px2rem(pixel)
    unit(pixel / default_font_size, rem)

/**
 * hidpi
 *
 * @see http://goo.gl/eHTUo6
 * @see http://bjango.com/articles/min-device-pixel-ratio/
 */
hidpi(ratio = default_retina_dppx)
    s = 'only screen and (-webkit-min-device-pixel-ratio:' + ratio + '),'
    s += 'only screen and (min-resolution:' + round(unit(ratio * 96, dpi)) + ')'
