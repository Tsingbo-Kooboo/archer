    if _type == fadeOutUp
        @keyframes _type
            0%
                opacity: 1
                transform: translateY(0)
            100%
                opacity: 0
                transform: translateY(-20px)

    if _type == fadeOutUpBig
        @keyframes _type
            0%
                opacity: 1
                transform: translateY(0)
            100%
                opacity: 0
                transform: translateY(-2000px)

    if _type == flash
        @keyframes _type
            0%, 50%, 100%
                opacity: 1
            25%, 75%
                opacity: 0

animate(_class_name, _type, _duration, _fill_mode)
    .{_class_name}
        animation-name: _type
        animation-duration: _duration
        animation-fill-mode: _fill_mode
    _animate_keyframes(_type)
