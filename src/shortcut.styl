$pos(type, args)
    position: unquote(type)
    for arg in args
        {arg[0]}: arg[1] is a 'unit' ? arg[1] : 0

fixed()
    $pos('fixed', arguments)

absolute()
    $pos('absolute', arguments)

relative()
    $pos('relative', arguments)
